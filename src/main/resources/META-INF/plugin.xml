<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.example.OXID-AI-Dev-Assist</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>OXID-AI-Dev-Assist</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="info@oxid.esales.com" url="https://www.oxid-esales.com/">OXID eSales AG</vendor>

    <description><![CDATA[ OXID Development Plugin powered by AI  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="AiStorm" secondary="true" icon="AllIcons.General.Modified" anchor="right"
                    factoryClass="com.oxidEsales.aIDevAssist.MyToolWindowFactory"/>
        <applicationConfigurable parentId="tools" instance="com.oxidEsales.aIDevAssist.AppSettingsConfigurable"
                                 id="com.oxidEsales.aIDevAssist.AppSettingsConfigurable"
                                 displayName="OXID AI Dev Assist"/>
        <applicationService serviceImplementation="com.oxidEsales.aIDevAssist.AppSettingsState"/>
    </extensions>

    <actions>
        <group id="MainGroup" text="OXID AI Dev Assist" popup="true">
            <action id="com.oxidEsales.aIDevAssist.AIOptimizeAction" class="com.oxidEsales.aIDevAssist.AIOptimizeAction" text="Optimize Code">
                <add-to-group group-id="EditorPopupMenu" anchor="last" />
            </action>
            <action id="com.oxidEsales.aIDevAssist.AIUnitTestAction" class="com.oxidEsales.aIDevAssist.AIUnitTestAction" text="Generate Unit Test">
                <add-to-group group-id="ProjectViewPopupMenu"/>
            </action>
        </group>
    </actions>
</idea-plugin>